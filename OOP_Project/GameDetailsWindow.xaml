<Window x:Class="OOP_Project.GameDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Game Details" Height="750" Width="950"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="0" Background="#1B2838" BorderBrush="#2A475E" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border x:Name="headerBorder">
                    <Border.Background>
                        <ImageBrush x:Name="headerImage" Stretch="UniformToFill" />
                    </Border.Background>
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#001B2838" Offset="0"/>
                                <GradientStop Color="#CC1B2838" Offset="0.7"/>
                                <GradientStop Color="#FF1B2838" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel VerticalAlignment="Bottom" Margin="40,0,40,20">
                            <TextBlock x:Name="txtGameName" FontSize="42" FontWeight="Bold" 
                                       Foreground="White" TextWrapping="Wrap" Text="Loading..."/>

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <materialDesign:PackIcon Kind="Star" Foreground="#FFD700" VerticalAlignment="Center" Width="20" Height="20"/>
                                <TextBlock x:Name="txtRating" FontSize="18" Foreground="White" FontWeight="Bold" Margin="5,0,20,0" VerticalAlignment="Center"/>

                                <Border x:Name="metacriticBorder" Padding="10,2" CornerRadius="2" VerticalAlignment="Center">
                                    <TextBlock x:Name="txtMetacritic" FontWeight="Bold" Foreground="White" FontSize="16"/>
                                </Border>

                                <TextBlock x:Name="txtGenres" Foreground="#C7D5E0" Margin="20,0,0,0" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>

                <Button x:Name="btnClose" Click="btnClose_Click" VerticalAlignment="Top" HorizontalAlignment="Right" 
                        Width="45" Height="40" Background="Transparent" BorderBrush="Transparent">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="X"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C93129"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Grid Grid.Row="1" Margin="40,0,40,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,30,0">
                    <StackPanel>
                        <TextBlock Text="ABOUT THE GAME" Foreground="#66C0F4" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtDescription" Foreground="#C7D5E0" FontSize="15" TextWrapping="Wrap" LineHeight="24"/>

                        <Border Background="#171A21" Margin="0,30,0,0" Padding="20" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="YOUR REVIEW" Foreground="#66C0F4" FontWeight="Bold" Margin="0,0,0,15"/>
                                <materialDesign:RatingBar x:Name="ratingBar" ValueChanged="RatingBar_ValueChanged" 
                                                          Foreground="#66C0F4" Max="5"/>
                                <TextBlock x:Name="txtYourRating" Foreground="#C7D5E0" Margin="0,10,0,0" FontSize="13" Text="Not rated yet"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Column="1" Background="#171A21" Padding="20" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="DETAILS" Foreground="#66C0F4" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Label Content="RELEASE DATE" Foreground="#8F98A0" FontSize="10" Padding="0"/>
                        <TextBlock x:Name="txtReleased" Foreground="#C7D5E0" Margin="0,2,0,15"/>

                        <Label Content="DEVELOPER" Foreground="#8F98A0" FontSize="10" Padding="0"/>
                        <TextBlock x:Name="txtDevelopers" Foreground="#66C0F4" Margin="0,2,0,15"/>

                        <Label Content="PUBLISHER" Foreground="#8F98A0" FontSize="10" Padding="0"/>
                        <TextBlock x:Name="txtPublishers" Foreground="#66C0F4" Margin="0,2,0,15"/>

                        <Label Content="PLATFORMS" Foreground="#8F98A0" FontSize="10" Padding="0"/>
                        <TextBlock x:Name="txtPlatforms" Foreground="#C7D5E0" TextWrapping="Wrap" Margin="0,2,0,15"/>

                        <UniformGrid Columns="2" Margin="0,5,0,15">
                            <StackPanel>
                                <Label Content="PLAYTIME" Foreground="#8F98A0" FontSize="10" Padding="0"/>
                                <TextBlock x:Name="txtPlaytime" Foreground="#C7D5E0"/>
                            </StackPanel>
                            <StackPanel>
                                <Label Content="ACHIEVEMENTS" Foreground="#8F98A0" FontSize="10" Padding="0"/>
                                <TextBlock x:Name="txtAchievements" Foreground="#C7D5E0"/>
                            </StackPanel>
                        </UniformGrid>

                        <Border x:Name="websiteLink" 
                                Visibility="Collapsed" 
                                Background="#2A475E" 
                                CornerRadius="2"
                                Padding="10,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="WebsiteLink_Click">
                            <TextBlock Text="OFFICIAL WEBSITE" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="Bold" 
                                   FontSize="12"/>          
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid x:Name="loadingPanel" Grid.RowSpan="2" Background="#1B2838">
                <StackPanel VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                 Value="0" IsIndeterminate="True" Foreground="#66C0F4" />
                    <TextBlock Text="Loading details..." HorizontalAlignment="Center" 
                               Foreground="#66C0F4" Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>