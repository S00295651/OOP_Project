<Window x:Class="OOP_Project.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Project"
        mc:Ignorable="d"
        Title="SearchWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="SearchBox"/>
            <Button Content="Search" Click="Search_Click"/>
            <ListBox x:Name="ResultsList"
                     DisplayMemberPath="Name"
                     MouseDoubleClick="ResultsList_MouseDoubleClick"/>
        </StackPanel>
    </Grid>
</Window>
