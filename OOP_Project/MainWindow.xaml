<Window x:Class="OOP_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Project" Background="#FFF1F2F6"
        mc:Ignorable="d" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="MainWindow" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#758BFD" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnMinimize" Content="_" Width="40" Height="40"
                    BorderBrush="Transparent" Background="#758BFD"
                    VerticalContentAlignment="Center" Padding="0,-15,0,0"
                    Click="btnMinimize_Click" Foreground="White" FontSize="32"/>
            <Button x:Name="btnMaximize" Content="▢" Width="40" Height="40"
                    BorderBrush="Transparent" Background="#758BFD"
                    VerticalContentAlignment="Center" Padding="0,-2,0,0"
                    Click="btnMaximize_Click" Foreground="White" FontSize="26">
            </Button>
            <Button x:Name="btnClose" Content="X" Width="40" Height="40"
                    BorderBrush="Transparent" Background="#758BFD"
                    Click="btnClose_Click" Foreground="White" FontSize="24"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" Height="52" TextWrapping="Wrap" Width="178" FontSize="40" VerticalAlignment="Top" Margin="150,-14,0,0" FontFamily="Bauhaus 93"><Run Language="en-ie" Text="L"/><Run Text="ibrary"/></TextBlock>
        <ListBox HorizontalAlignment="Left" Height="340" Grid.Row="1" VerticalAlignment="Center" Width="150" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btnAddGame" Content="ADD" HorizontalAlignment="Left" Height="35" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="AddGame_Click" FontSize="20" FontFamily="Bauhaus 93"/>
        <Button x:Name="btnDelGame" Content="DEL" HorizontalAlignment="Left" Height="35" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="DelGame_Click" FontSize="20" FontFamily="Bauhaus 93" Margin="75,0,0,0"/>
    </Grid>
</Window>

